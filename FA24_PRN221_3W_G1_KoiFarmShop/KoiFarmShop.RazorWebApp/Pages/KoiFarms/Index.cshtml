@page
@model KoiFarmShop.RazorWebApp.Pages.KoiFarms.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table id="idTable" class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.KoiFarm[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.KoiFarm[0].Location)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.KoiFarm[0].PhoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.KoiFarm[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.KoiFarm[0].Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.KoiFarm[0].Website)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.KoiFarm[0].Image)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.KoiFarm[0].AwardImage)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.KoiFarm[0].Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.KoiFarm[0].Owner)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.KoiFarm) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Location)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Website)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Image)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AwardImage)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Owner.FullName)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/table-pagination.js"></script>
<script>
    $("#idTable").createTablePagination({

        rowPerPage: 2,
    });
</script>
